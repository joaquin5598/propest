<h2>Registrate!</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  
  <div><%= f.label "Nombre" %><br />
  <%= f.text_field :name%></div>

  <div><%= f.label "Apellidos" %><br />
  <%= f.text_field :lastname%></div>

  <div><%= f.label "Fecha Nacimiento" %><br />
  <%= f.date_select :birthday, {:use_month_names => ['Enero', 'Febrero', 'Marzo', 'Abril', 'Mayo', 'Junio', 'Julio', 'Agosto', 'Septiembre', 'Octubre', 'Noviembre','Diciembre'], :start_year => 1940 }%></div>

  <div><%= f.label :email %><br />
  <%= f.email_field :email%></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></div>

  <div><%= f.submit "Registrarse" %></div>
<% end %>

