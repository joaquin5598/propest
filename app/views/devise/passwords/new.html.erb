<style>
	#resetear{

    margin-left: 500px;

	}
</style>

<div id="content">
<div class="container">
    <div>
        <div id="main">
        <center>
        <h1 class="page-header">Olvidó su contraseña?</h1>
        </center>
           <div class="row">
        <div class="span4" id="resetear">
		<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="control-group">
        <label class="control-label">
             Email
         <span class="form-required" title="Ingrese email de su cuenta.">*</span>
         </label>
         <div class="controls">
         <%= f.email_field :email, label: false,:autofocus => true %>
         </div>
      </div>
    <div class="form-actions">
                            <%= f.submit "Resetear contraseña",class: "btn btn-primary arrow-right"   %>
                        </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
</div>
</div>
</div>
</div>